<%= simple_form_for(@resource_allocation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :comment %>
    <%= f.input :quantity %>
    <%= f.input :milestone_id %>
    <%= f.input :person_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
