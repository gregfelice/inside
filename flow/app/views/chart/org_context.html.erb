



<div class="well">
  <%= link_to "Go to #{@person.name}", person_path(@person.id), :method => "get" %>
  |
  <%= link_to "Show Less", chart_org_context_path(:id => @person.id, :max_sink_depth => @max_sink_depth, :decrease_max_sink_depth => true) %> 
  |
  <%= link_to "Show More", chart_org_context_path(:id => @person.id, :max_sink_depth => @max_sink_depth, :increase_max_sink_depth => true) %> 

  <div class="pull-right">

    <div class="btn-group">

      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
	Print
	<span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
	<%= link_to "Letter Portrait", chart_org_context_print_path(:id => @person.id, :max_sink_depth => @max_sink_depth, :increase_max_sink_depth => true, :paper_choice => 'letter_portrait'), :target => "_blank" %> 
	<%= link_to "Legal Portrait", chart_org_context_print_path(:id => @person.id, :max_sink_depth => @max_sink_depth, :increase_max_sink_depth => true, :paper_choice => 'legal_portrait'), :target => "_blank" %> 
	<%= link_to "A3 Portrait", chart_org_context_print_path(:id => @person.id, :max_sink_depth => @max_sink_depth, :increase_max_sink_depth => true, :paper_choice => 'a3_portrait'), :target => "_blank" %> 

	<%= link_to "Letter Landscape", chart_org_context_print_path(:id => @person.id, :max_sink_depth => @max_sink_depth, :increase_max_sink_depth => true, :paper_choice => 'letter_landscape'), :target => "_blank" %> 
	<%= link_to "Legal Landscape", chart_org_context_print_path(:id => @person.id, :max_sink_depth => @max_sink_depth, :increase_max_sink_depth => true, :paper_choice => 'legal_landscape'), :target => "_blank" %> 
	<%= link_to "A3 Landscape", chart_org_context_print_path(:id => @person.id, :max_sink_depth => @max_sink_depth, :increase_max_sink_depth => true, :paper_choice => 'a3_landscape'), :target => "_blank" %> 
      </ul>
    </div>
    
  </div>

</div>

<% if browser.safari? %>

<object type="image/svg+xml" width=6000 height=6000 data="/chart/org_context.svg?id=<%= @person.id %>&max_sink_depth=<%= @max_sink_depth %>">
  Your browser does not support SVG
</object>

<% else %>

<object type="image/svg+xml" data="/chart/org_context.svg?id=<%= @person.id %>&max_sink_depth=<%= @max_sink_depth %>">
  Your browser does not support SVG
</object>

<% end %>
