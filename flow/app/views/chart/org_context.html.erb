
<%= button_to "Back", :back, :class => "btn btn-small btn-info", :method => "get" %>

<%= form_tag chart_org_context_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :max_sink_depth, params[:max_sink_depth] %>
    <%= hidden_field_tag 'id', @person.id %>
    <%= submit_tag "go!",:class => 'btn' %>
  </p>
<% end %>

<object type="image/svg+xml" height="100000" width="100000" data="/chart/org_context.svg?id=<%= @person.id %>&max_sink_depth=<%= @max_sink_depth %>">
  Your browser does not support SVG
</object>

