<%- model_class = Employee -%>

<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize %>
    <%= link_to raw("<i class='icon-plus icon-white'></i> New Employee"), new_employee_path, :class => 'btn-large btn-primary pull-right' %>
  </h1>
  
  <small><div class="muted pull-left"><%= @emps_count %> results</div> </small>
  
  <small><div class="pull-right"><%= link_to "CSV", employees_path(format: "csv") %> | <%= link_to "Excel", employees_path(format: "xls") %></div></small>
  <br>
</div>

<div id="search-section" class="well">
  <div class="close">x</div>  

  <%= search_form_for @search, :url => search_employees_path, :class => "form-inline", :html => {:method => :post} do |f| %>

    <%= f.condition_fields do |c| %>
      <%= render "condition_fields", f: c %>
    <% end %>
    
    <p><%= link_to_add_fields raw("<small>Add Conditions</small>"), f, :condition %></p>
    
    <div class="form-inline">
      Sort<br>
      <%= f.sort_fields do |s| %>
        <%= s.sort_select %>
      <% end %>
    </div>

    <%= submit_tag "Search", :name => nil, :class => 'btn pull-right' %>

  <% end %>
    
</div>	

<div class="muted">

  <button id="show_search" class="btn pull-right"><i class="icon-search"></i> Search</button>
</div>

<table class="table table-striped">

  <thead>
    <tr>      
      <th><%= sort_link @search, :id, "Id" %></th>
      <th><%= sort_link @search, :full_name, "Full Name" %></th>
      <th><%= sort_link @search, :job_title, "Job Title" %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.id, employee_path(employee) %></td>
        <td><%= employee.full_name %></td>
        <td><%= employee.job_title %></td>
        <td>
          <%= link_to 'Edit', edit_employee_path(employee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', 
            :default => t("helpers.links.destroy")),
            employee_path(employee), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @employees %>
