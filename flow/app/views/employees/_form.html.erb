
<%= simple_form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  
  <fieldset>
    <%= f.input :full_name %>
    <%= f.input :job_title %>
    <%= f.input :contractor %>
    <%= f.input :part_time_status %>
  

    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to 'Cancel', employees_path, :class => 'btn' %>
    </div>


  </fieldset>

<% end %>
