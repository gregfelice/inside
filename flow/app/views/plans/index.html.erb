<%- model_class = Plan-%>

<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize %>
    <%= link_to raw("<i class='icon-plus icon-white'></i> New Plan"), new_plan_path, :class => 'btn-large btn-primary pull-right' %>
  </h1>
</div>

<table class="table table-striped">

  <thead>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th>Category</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
    <tr>
      <td><%= link_to plan.id, plan_path(plan) %></td>
      <td><%= plan.name %></td>
      <td><%= plan.description %></td>
      <td><%= plan.portfolio_category %></td>
      <td>
	<%= link_to 'Edit', edit_plan_path(plan), :class => 'btn btn-mini' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")), 
	plan_path(plan), :method => :delete, 
	:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	:class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
